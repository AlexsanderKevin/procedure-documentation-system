<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guia Service Lenovo</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!--styles-->
    <link  href="/css/main.css" rel="stylesheet">
    <link  href="/css/header.css" rel="stylesheet">
    <link  href="/css/item.css" rel="stylesheet">
    <link  href="/css/procedure_page.css" rel="stylesheet">
    <link  href="/css/item_subsection.css" rel="stylesheet">
    <link  href="/css/item_section.css" rel="stylesheet">
    <link  href="/css/modal.css" rel="stylesheet">
    <link  href="/css/nav.css" rel="stylesheet">
    <link  href="/css/department_selection.css" rel="stylesheet">
    <link  href="/css/login_page.css" rel="stylesheet">
    <link  href="/css/edit.css" rel="stylesheet">
    <link  href="/css/edition_modal.css" rel="stylesheet">

</head>
<body>
    <div class="container">
        {{{body}}}
    </div>

    <!-- #region modal -->
    <div id="modal" class="modalContainer ">
        <div id="conceptModalFrame" class="modalFrame">
            <div class="modalHeader">
                <h3 class="modal_title">modal</h3>
                <button class="modalCloseButton all_button">X</button>
            </div>

            <div class="modalContent itemContent"></div>
        </div>
    </div>

    <!--#region form modal-->
    <!--single field form-->
    <div id="single_field_form" class=" modalContainer form_container ">
        <form id="form_frame" class="form_frame">
            <div class="modal_form_header">
                <h3 id="single_field_form_title" class="modal_title">modal</h3>
            </div>

            <div class="modalContent form_field_container">
                <div class="edition_input_box">
                    <input type="text" class="edition_field" name="title" required>
                    <label for="title" class="edition_input_label">Título</label>
                </div>

            </div>

            <div class="modal_form_footer">
                <button class="form_close_button modal_form_button all_button">Fechar</button>
                <button type="submit" class="modal_form_button all_button submit_edition_button">OK</button>
            </div>
        </form>
    </div>
    <!--two field form-->
    <div id="two_field_form" class=" modalContainer form_container ">
        <form id="form_frame" class="form_frame">
            <div class="modal_form_header">
                <h3 id="two_field_form_title" class="modal_title">modal</h3>
            </div>

            <div class="modalContent form_field_container">
                <div class="edition_input_box">
                    <input type="text" class="edition_field" name="title" required>
                    <label for="title" class="edition_input_label">Título</label>
                </div>
                <br>
                <div class="textbox_box">
                    <label for="description" class="edition_textbox_label">Descrição</label>
                    <textarea type="textarea" class="edition_textbox" name="description"></textarea>
                </div>
            </div>

            <div class="modal_form_footer">
                <button class="form_close_button modal_form_button all_button">Fechar</button>
                <button type="submit" class="modal_form_button all_button submit_edition_button">OK</button>
            </div>
        </form>
    </div>
    <!--#endregion-->
    <!--#endregion-->

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <!--public static js files-->
    <script src="/js/nav.js"></script>
    <script src="/js/item_subsection.js" type="module"></script>
    <script src="/js/procedure_page.js"></script>
    <script src="/js/modal.js"></script>
    <script src="/js/burger.js"></script>
    <script src="/js/home_button.js"></script>
    <script src="/js/login_form.js"></script>
    <script src="/js/edit.js"></script>
</body>
</html>
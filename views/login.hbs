<section class="login form_section">
    <header class="form_header">
        <h1>Login</h1>
    </header>
    
    <form class="login_form" action="/auth" method="POST">
        
        <div class="input_box">
             <input id="username" class="login_text_input username" type="text" name="username" required>
            <label for="username" class="login_label">Nome de Usu√°rio</label>
        </div>
        <div class="input_box">
             <input id="password" class="login_text_input" type="password" name="password" required>
            <label for="password" class="login_label">Senha</label>
        </div>
        
        <div class="button_container">
          <button class="login_button all_button" type="submit">Entrar</button>
        </div>
    </form>
</section>

{{#if token}}
  <script type="text/javascript">
    const token = '{{token}}';

    localStorage.setItem("token", token)

    window.location.href = "/home/" + '{{departmentId}}'
  </script>
{{/if}}
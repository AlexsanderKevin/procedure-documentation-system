<section class="login form_section">
    <form class="login_form" action="/auth" method="POST" name="login_form">        

      <h1>Login</h1>

      {{>forms/input_box type="text" name="username" class=' username' label='*Nome de UsuÃ¡rio'}}
      {{>forms/input_box type="password" name="password" label='*Senha'}}

      <button class=" login_button" type="submit" >Entrar</button>
    </form>
</section>

{{#if token}}
  <script type="text/javascript">
    const token = '{{token}}';
    localStorage.setItem("token", token)
    window.location.href = "/profile"

    localStorage.setItem("name", '{{user_name}}'),
    localStorage.setItem("department", "{{user_department}}"),
    localStorage.setItem("username", "{{user_username}}"),
    localStorage.setItem("cargo", "{{user_cargo}}"),
    localStorage.setItem("adm", "{{user_adm}}")
    localStorage.setItem("editor", "{{user_editor}}")
  </script>
{{/if}}

<script type="module" src="/js/login.js"></script>
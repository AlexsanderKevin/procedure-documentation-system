{{#departments}}
{{#each this.item_sections}}
{{#each this.item_subsections}}
{{#each this.items}}
<section id="content">
    {{>main/header title = this.dataValues.title}}
    {{>main/home_button}}
    {{>nav/procedure}}
    {{#>edition/tool_bar}}
        <option value="solution">Solução</option>
        <option value="obs">Observação</option>
        <option value="issue">Possível Problema</option>
    {{/edition/tool_bar}}
    <div>
        <!--# item description-->
        {{#if this.dataValues.description}}
        <div class="item_content_container">
            <div class="item_content_header">
                <h2 id="description">Descrição</h2>

                {{>main/burger class='page_content_burger content_burger'}}
            </div>

            <div class="item_content_text">
                <p>{{{this.dataValues.description}}}</p>
            </div>           
        </div>
        {{/if}}
        <!--# item solution-->
            {{#if this.item_solutions}}
                {{>procedure/content category = item_solutions title = 'Soluções' id = 'solutions'}}
            {{/if}}
            <!--# item obs-->
            {{#if this.item_obs}}
                {{>procedure/content category = item_obs title = 'Observações' id = 'obs'}}
            {{/if}}
            <!--# item issues-->
            {{#if this.item_issues}}
                {{>procedure/content category = item_issues title = 'Possíveis Problemas' id = 'issues'}}
            {{/if}}
            <!--# comments-->
            {{#if this.comments}}
                {{>procedure/content category = comments title = 'Comentários' id = 'comments'}}
            {{/if}}   
    </div>
    <a href="/home/{{../../../dataValues.id}}">Home</a>
</section>
{{/each}}
{{/each}}
{{/each}}
{{/departments}}
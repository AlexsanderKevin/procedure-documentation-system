{{#>forms/default_form id="add_subsection_form" title="Nova Subseção" confirm="Adicionar"}}
    {{>forms/input_box name="subsection_title" type="text" label="*Título"}}
        
    {{#>forms/datalist name="subsection_section" label="*Seção"}}
        {{#each item_sections}}
            <option value="{{this.dataValues.name}}">
        {{/each}}
    {{/forms/datalist}}
        
    {{>forms/textarea_box name="description" label="*Descrição"}}
{{/forms/default_form}}


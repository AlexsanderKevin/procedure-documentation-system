<div class="req_container">
    <div class="req_info_container">
        <h2 class="req_title_container"><span class="req_title">{{>id_span}}{{title}}</span></h2>
        <hr>
        {{>@partial-block}}
        
    </div>
    {{#if this.dataValues.description}}
    <div class="req_description_container">
        <p class="req_description_label"><strong>Descrição:</strong></p>
        <p>{{{this.dataValues.description}}}</p>
    </div>
    {{/if}}
    {{#if this.dataValues.content}}
    <div class="req_description_container">
        <p class="req_description_label"><strong>Descrição:</strong></p>
        <p>{{{this.dataValues.content}}}</p>
    </div>
    {{/if}}
        <div class="req_button_container">
            <a href="/reprove_{{target_table}}/{{this.dataValues.id}}" class="all_button reprove_button" method="delete">Reprovar</a>
            <a href="/approve_{{target_table}}/{{this.dataValues.id}}" class="all_button approve_button">Aprovar</a>
        </div>
</div>
<br><br>

{{#if this.dataValues.approved}}
<div>
    <div id="{{this.dataValues.name}}" class="item_subsection section_color_{{department}}">
        <div class=" subsection_title">
            <div class="inner_div">

            <button class="subsection_about_button section_color_{{department}}">
                ?
            </button>

            <h3 class="subsection_name section_color_{{department}}">
                
                <span class="subsection_title_text">
                    {{>id_span}}
                    {{this.dataValues.name}}
                </span>
                <!-- edit subsection title form -->
                {{>edition/forms/update/title
                    target='subsection'
                    id=this.dataValues.id
                    form_class='update_subsection_title_form'
                    redirect=department
                    collumn='name'
                    input_value=this.dataValues.name
                }}
                <!-- pencil button -->
                {{>edition/button/edit class="edit_section update_subsection_title"}}
                <!-- trash button -->
                {{>edition/button/delete id=this.dataValues.id target='subsection' redirect=department class="delete_subsection"}}
            </h3>
            </div>

            {{>main/burger class = 'subsection_burger'}}

        </div>
        {{#>main/modal 
        title=this.dataValues.name
        modal_frame_class="description_modal_frame" 
        modal_container_class="description_modal_container"
        close_button_class="close_description_modal"
        }} 
            <span class="subsection_description_text">
                {{{this.dataValues.description}}}
            </span>
            {{>edition/forms/update/description
                target='subsection'
                id=this.dataValues.id
                form_class='update_subsection_description_form'
                redirect=department
                collumn='description'
                input_value=this.dataValues.description
                input_style='height: 200px; min-width: 100%; width: 900px'
            }}

            {{>edition/button/edit class="edit_section update_subsection_description"}}
        {{/main/modal}} 

    <!--#region items-->
    <ul class="mainUl">
        <div class="item_subsection_content">
            {{>@partial-block}}
        </div>
    </ul>
    </div>
</div>

{{/if}}

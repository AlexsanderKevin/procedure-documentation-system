{{#each this.items}}
    {{#if dataValues.description}}
    <div subsection="{{../dataValues.name}}" class="editable single_item_container">
        <a href="/procedure/{{this.dataValues.title}}" class="itemList section_color_{{../../dataValues.id}}">
            <h4 class="item_name">
                {{this.dataValues.title}}
            </h4>
        </a>
        {{>edition/button/edit class="procedure"}}
    </div>

    {{else}}
    <div subsection="{{../dataValues.name}}" class="single_item_container">                        
        <h4 class="emptyItemList item_name">
            {{this.dataValues.title}}
        </h4>
        {{>edition/button/edit class="procedure"}}
    </div>
    {{/if}}
{{/each}}
{{>edition/button/add class="procedure add_procedure_button"}}